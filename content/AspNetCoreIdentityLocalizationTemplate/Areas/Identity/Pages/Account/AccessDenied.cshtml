@page
@using AspNetCoreIdentityLocalization.Resources
@inject LocService SharedLocalizer
@model AccessDeniedModel
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Access denied");
}

<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger">@SharedLocalizer.GetLocalizedHtmlString("You do not have access to this resource.")</p>
</header>
