@page
@using AspNetCoreIdentityLocalization.Resources
@inject LocService SharedLocalizer
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Reset password confirmation");
}

<h1>@ViewData["Title"]</h1>
<p>
    @SharedLocalizer.GetLocalizedHtmlString("Your password has been reset. Please") <a asp-page="./Login">@SharedLocalizer.GetLocalizedHtmlString("click here to log in")</a>.
</p>
