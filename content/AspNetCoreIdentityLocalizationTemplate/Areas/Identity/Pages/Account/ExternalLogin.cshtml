@page
@using AspNetCoreIdentityLocalization.Resources
@inject LocService SharedLocalizer
@model ExternalLoginModel
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Register");
}

<h1>@ViewData["Title"]</h1>
<h4>@SharedLocalizer.GetLocalizedHtmlString("Associate your account.", @Model.LoginProvider)</h4>
<hr />

<p class="text-info">
    @SharedLocalizer.GetLocalizedHtmlString("You've successfully authenticated with")<strong>@Model.LoginProvider</strong>.
    @SharedLocalizer.GetLocalizedHtmlString("Please enter an email address for this site below and click the Register button to finish logging in.")
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("Register")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
